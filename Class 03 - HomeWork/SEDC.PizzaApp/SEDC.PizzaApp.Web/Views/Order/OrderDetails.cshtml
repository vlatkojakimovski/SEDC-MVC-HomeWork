@model SEDC.PizzaApp.Web.Models.ViewModels.OrderDetailsViewModel

@{
    var orderDetails = ViewData["OrderDetails"] as SEDC.PizzaApp.Web.Models.ViewModels.OrderDetailsViewModel;
    string orderStatus = "Order is not delivered";

    if (Model.Delivered)
    {
        orderStatus = "Order is delivered !";
    }
}

<partial name="~/Views/Shared/Partial/_Greeting.cshtml"/>

<h2>Order Details</h2>
<ul>
    <li>@Model.Id</li>
    <li>Payment method: @Model.PaymentMethod</li>
    <li>Pizza name:@Model.PizzaName</li>
    <li>Price: @Model.Price</li>
    <li>User name: @Model.UserFullName</li>
    <li>@orderStatus</li>
</ul>
@if (Model.Delivered)
{
    <p>Order is delivered</p>
}
else
{
    <p>Your order is not delivered. Please contact number: 111 222 333</p>
}

@if (Model.Price > 5)
{
    <p>Your order: @Model.PizzaName</p>
}
else if (Model.Price == 4)
{
    <p> Your order: @Model.PizzaName</p>
}
else if (Model.Price < 4)
{
    <p> Your order: @Model.PizzaName </p>
}




<ul>
    <li>@("Mr./Mrs/" + Model.UserFullName)</li>
    <li>@(Model.Price  + 35)</li>
    <li>@(string.Format("{0:C}", Model.Price))</li>
</ul>

<h3>Datetime now:</h3>
<p>@DateTime.Now</p>

<p> @ViewData["OrderDetails"]</p>

<h2>Order details from ViewData object:</h2>
<ul>
    <li>@orderDetails.Id</li>
    <li>@orderDetails.PaymentMethod</li>
    <li>@orderDetails.PizzaName</li>
    <li>@orderDetails.Price</li>
    <li>@orderDetails.UserFullName</li>



</ul>